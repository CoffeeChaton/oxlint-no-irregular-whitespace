{
    "compilerOptions": {
        "target": "ES2020",
        "noEmit": true,
        "outDir": "./out",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable",
        ],
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "skipLibCheck": true,
        "types": [
            "node",
        ],
    },
    "include": [
        "src",
        "libs",
        "script",
        "eslint.config.mjs",
    ],
    "exclude": [
        "node_modules",
        //   "src/game"
    ],
}
